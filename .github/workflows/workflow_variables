name: Testing workflow variables

on:
   workflow_dispatch

env:
  cloud: google-cloud

jobs:
  greeting_job:
    run-on: ubuntu-latest
    env: 
      Greeting: Hello
    steps:
       - name: "says Hello Mona its Monday"
         run: echo "$Greeting $First_Name is using $cloud!"
         env: 
            First_Name: Sourav
         
